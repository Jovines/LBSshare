<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/layer_list_splash_backgroud</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog" tools:ignore="ResourceName">
        <!--        dialog是否有边框-->
        <item name="android:windowFrame">@null</item>
        <!--        dialog是否悬浮在activity上,设置为false，相当于布局在activity中，例如软键盘，可以顶起false的dialog-->
        <item name="android:windowIsFloating">true</item>

        <item name="android:windowIsTranslucent">true</item>
        <!--        状态栏字体颜色，只是在安卓6.0以上可用-->
        <item name="android:windowLightStatusBar" >true</item>
        <!--        去除dialog最底部的灰色背景-->
        <item name="colorBackgroundFloating">@android:color/transparent</item>
        <!--        去除dialog默认白色背景-->
        <item name="android:background">@android:color/transparent</item>
        <!--        是否加遮罩（对话框出现时，背景变暗。为true则充许变暗）-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
