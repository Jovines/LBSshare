<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginStart="10dp"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingVertical="6dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/high_quality_user_image"
        android:layout_width="49dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/user_default_avatar_black"
        app:civ_circle_background_color="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/high_quality_user_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/high_quality_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="重庆发布重庆发布"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/high_quality_user_image"
        app:layout_constraintStart_toStartOf="@+id/high_quality_user_image"
        tools:ignore="SmallSp" />


    <ImageView
        android:id="@+id/new_high_quality_user_logo"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/ic_high_quality_user_logo"
        app:layout_constraintBottom_toBottomOf="@+id/high_quality_user_image"
        app:layout_constraintEnd_toEndOf="@+id/high_quality_user_image" />
</androidx.constraintlayout.widget.ConstraintLayout>