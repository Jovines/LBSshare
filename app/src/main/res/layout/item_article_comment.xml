<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_article_comment_avator"
        android:layout_width="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_home"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15sp"
        android:layout_height="50dp"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_article_coment_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="我是用户名"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/iv_article_comment_avator"
        app:layout_constraintTop_toTopOf="@+id/iv_article_comment_avator"
        android:layout_marginStart="10dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_artical_comment_delete"
        android:textSize="14sp"
        android:textColor="#DB5860"
        app:layout_constraintBottom_toBottomOf="@+id/tv_article_coment_username"
        app:layout_constraintTop_toTopOf="@+id/tv_article_coment_username"
        app:layout_constraintEnd_toEndOf="@+id/tv_article_comment_content"
        android:text="删除"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_article_comment_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000"
        android:text="我是评论的内容"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_article_coment_username"
        app:layout_constraintStart_toStartOf="@+id/tv_article_coment_username"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_article_comment_date"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_article_comment_content"
        app:layout_constraintEnd_toEndOf="@+id/tv_artical_comment_delete"
        android:text="2020-6-5 15:38:02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_article_comment_date"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"/>

</androidx.constraintlayout.widget.ConstraintLayout>